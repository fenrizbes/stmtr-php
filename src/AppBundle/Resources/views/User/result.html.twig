<h2>your current rating:</h2>

<div class="result-left pull-left">
    <img src="{{ user.avatar }}" />

    {{ include('AppBundle:User:rating.html.twig') }}

    <br />

    <span class="user-dates text-muted">
        last update: {{ user.updatedAt | date('M j Y g:i a') }}
        <br />
        next update: {{ user.updatedAt | date_modify('+1 day') | date('M j Y g:i a') }}
    </span>
</div>

<div class="result-right pull-right">
    <div class="result-right-title pull-left">
        games owned:
    </div>
    <div class="result-right-value pull-right text-success">
        {{ statistics.games | number_format }}
    </div>

    <div class="result-right-title pull-left">
        hours played:
    </div>
    <div class="result-right-value pull-right text-success">
        {{ statistics.hours | number_format }}
    </div>

    <div class="result-right-title pull-left">
        achievements:
    </div>
    <div class="result-right-value pull-right text-success">
        {{ statistics.achievements | number_format }}
    </div>
</div>

<div class="clearfix"></div>